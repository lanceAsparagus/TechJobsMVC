<div class="container body-content">

    <h1>@ViewBag.title</h1>
    <table class="job-listing">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Employer</th>
            <th>Location</th>
            <th>PositionType</th>
            <th>CoreCompetency</th>
        </tr>

        @{
            //TODO #1: Use a loop to display job results in a table.
            List<Job> jobs = ViewBag.jobs;

            foreach (var job in jobs)
            {
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Employer</th>
                    <th>Location</th>
                    <th>PositionType</th>
                    <th>CoreCompetency</th>
                </tr>
            }
        }

    </table>

</div>